<div class="row">
    <div class="col-sm-8 col-md-10 offset-md-1 offset-sm-2">
        <div id="error" class="alert alert-danger" {{#if noMsg}} hidden {{/if}}>
            {{ errorMsg }}
        </div>
    </div>
</div>
{{# if products}}
    <div class="row card-row">
        <div class="col-sm-6 col-md-7 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-3">
                                <strong>{{ this.item.title }}</strong>
                            </div>
                            <div class="col-md-3">
                                <span class="label label-success">${{this.price}}</span>
                            </div>
                            <div class="col-md-3">
                                <span class="badge">{{ this.qty }}</span>
                            </div>
                            <div class="col-md-3">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/increase/{{this.item._id}}">Increase By 1</a></li>
                                        <li><a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce By 1</a></li>
                                        <li><a class="dropdown-item" href="/remove/{{this.item._id}}/">Remove All</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <br>
    
    <div class="row">
        <div class="col-sm-6 col-md-5 col-md-offset-3 col-sm-offset-3">
            <strong>Total: ${{this.totalPrice}}</strong>
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-sm-6 col-md-5 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" role="button" class="btn btn-primary">Checkout</a>
        </div>
    </div>
{{else}}
    <div class="row main-body">
        <div class="col-sm-6 col-md-5 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in cart</h2>
        </div>
    </div>
{{/if}}
